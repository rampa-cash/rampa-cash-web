# Rampa Cash Web Environment Configuration
# Copy this file to .env and modify as needed

# Backend API Configuration
NEXT_PUBLIC_BACKEND_URL=http://localhost:3001
NEXT_PUBLIC_API_TIMEOUT=10000

# Next.js Configuration
NEXT_TELEMETRY_DISABLED=1

# For Vercel deployment, set these in Vercel dashboard:
# NEXT_PUBLIC_BACKEND_URL=https://your-backend-api.vercel.app
# NEXT_PUBLIC_API_TIMEOUT=10000

# Para Configuration
# Get your API Key from: https://docs.getpara.com
NEXT_PUBLIC_PARA_API_KEY=your_para_api_key_here
NEXT_PUBLIC_PARA_SECRET_API_KEY=your_para_secret_api_key_here
NEXT_PUBLIC_PARA_APP_NAME=Rampa

NEXT_PUBLIC_SHOW_LOGIN_BUTTON=true