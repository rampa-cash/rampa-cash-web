# Rampa Cash Web Environment Configuration
# Copy this file to .env and modify as needed

# Backend API Configuration
NEXT_PUBLIC_BACKEND_URL=http://localhost:3001
NEXT_PUBLIC_API_TIMEOUT=10000

# Next.js Configuration
NEXT_TELEMETRY_DISABLED=1

# For Vercel deployment, set these in Vercel dashboard:
# NEXT_PUBLIC_BACKEND_URL=https://your-backend-api.vercel.app
# NEXT_PUBLIC_API_TIMEOUT=10000

# Web3Auth Configuration
# Get your Client ID from: https://dashboard.web3auth.io
NEXT_PUBLIC_WEB3AUTH_CLIENT_ID=your_web3auth_client_id_here

# Use SAPPHIRE_MAINNET for production
# NEXT_PUBLIC_WEB3AUTH_NETWORK=sapphire_mainnet

NEXT_PUBLIC_SHOW_LOGIN_BUTTON=true